{
  "openapi": "3.0.3",
  "info": {
    "title": "shoestoreonline",
    "version": "0.0.1-SNAPSHOT",
    "description": "Demo project for Spring Boot"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Development server"
    }
  ],
  "paths": {
    "/shoes": {
      "get": {
        "summary": "Get all shoes",
        "description": "Retrieves a collection of all available shoes in the store",
        "operationId": "getAllShoes",
        "responses": {
          "200": {
            "description": "Successful response with list of shoes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Shoe"
                  }
                }
              }
            }
          }
        },
        "tags": ["shoes"]
      }
    },
    "/shoes/{id}": {
      "get": {
        "summary": "Get shoe by ID",
        "description": "Retrieves a specific shoe by its unique identifier",
        "operationId": "getShoe",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Unique identifier of the shoe",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with shoe details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Shoe"
                }
              }
            }
          }
        },
        "tags": ["shoes"]
      }
    }
  },
  "components": {
    "schemas": {
      "Shoe": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "description": "Unique identifier of the shoe"
          },
          "name": {
            "type": "string",
            "description": "Name of the shoe"
          },
          "brand": {
            "type": "string",
            "description": "Brand of the shoe"
          },
          "price": {
            "type": "number",
            "format": "double",
            "description": "Price of the shoe"
          },
          "stock": {
            "type": "integer",
            "format": "int32",
            "description": "Number of shoes in stock"
          }
        },
        "required": ["id", "name", "brand", "price", "stock"]
      }
    }
  },
  "tags": [
    {
      "name": "shoes",
      "description": "Operations related to shoe management"
    }
  ]
}
